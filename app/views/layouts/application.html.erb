<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title><%= h(yield(:title) || "Devise") %></title>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag :application %>
  <%= yield(:head) %>
</head>
<body>


<% if user_signed_in? or admin_signed_in? -%>
  <nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p><%= link_to 'To-do', root_path , :class => "navbar-brand"%></p>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
            <li class="divider"></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>
      
  <% if user_signed_in? -%>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
          <ul class="dropdown-menu">          
            <li> <%= link_to 'My info', edit_user_registration_path %></li>
            <li> <%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>          
          </ul>
        </li>
      </ul>
      <% end -%>

        <% if admin_signed_in? -%>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_admin.email %> <b class="caret"></b></a>
          <ul class="dropdown-menu">          
            <li> <%= link_to 'My info', edit_admin_registration_path %></li>
            <li> <%= link_to 'Sign out', destroy_admin_session_path, method: :delete %></li>          
          </ul>
        </li>
      </ul>
      <% end -%>
    </div><!-- /.navbar-collapse -->
  </nav>
  <% end -%>
  <div class="container" role="main" id="main">
   <div id="flash"> 
<%= render("shared/flash") %>
</div>

    <%- if show_title? -%>
    <h1><%=h yield(:title) %></h1>
    <%- end -%>
    

    <%= yield %>


    <footer>
      <p>&copy; To-do 2013</p>
    </footer>
  </div>
</body>
</html>





