<div class="row">
	<div class="col-lg-4 col-lg-offset-4 well">
		<h2>Sign up</h2>		
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<div class="form-group" ><%= f.label :email %><br />
			<%= f.email_field :email, :autofocus => true, class: 'form-control' %></div>

			<div class="form-group" ><%= f.label :password %><br />
				<%= f.password_field :password, class: 'form-control' %></div>

				<div><%= f.submit "Sign up" , :class => "btn btn-primary btn-lg btn-block" %></div>
				<% end %>

				<%= render "devise/shared/links" %>
			</div>
		</div>