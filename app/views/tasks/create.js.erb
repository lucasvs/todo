<% if @task.errors.any? -%>
  /*Hide the flash notice div*/
  $("#flash_notice").hide(300);

 <% @task.errors.full_messages.each do |msg| -%>
 $("#task_errors").html("<%= escape_javascript(msg)%>");     
  <% end -%>

  $("#new_task ").remove();
  /*Update the html of the div post_errors with the new one*/

  /*Show the div post_errors*/
  $("#task_errors").show(300);

<% else -%>
  /*Hide the div post_errors*/
  $("#task_errors").hide(300);

  /*Update the html of the div flash_notice with the new one*/
  $("#flash_notice").html("<%= escape_javascript(@task.list_id.to_s)%>");
  $("#flash").html("<%= escape_javascript(render('shared/flash'))%>");

  $("#flash").hide(2000);
  /*Clear the entire form*/
  $(":input:not(input[type=submit])").val("");

  /* append na lista do id certo*/
    
  $("#<%= escape_javascript(@task.list_id.to_s)%>-List").append("<a class='thumbnail' data-remote='true' href='/tasks/<%= escape_javascript(@task.id.to_s)%>/edit'  id='main-<%= escape_javascript(@task.id.to_s)%>'><%= escape_javascript(@task.title.to_s)%></a>");

  $("#new_task ").remove();
  $("#vazio").remove();
  

<% end -%>
