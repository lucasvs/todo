function update(){
	$('#list_title').on('blur', function () {  	
		$('#edit_list_6').submit();
		$("#title").html($(this).val());

		
	});

	$('#list_title').on('keydown', function (ev) {
		if(ev.which === 13) {
        // Will change backgroundColor to blue as example       
        $('#edit_list_6').submit(); 
        $("#title").html($(this).val());      
        // Avoid form submit
        return false;
    }
});
}

