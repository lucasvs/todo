<% if @list.errors.any? -%>
  /*Hide the flash notice div*/
  $("#flash_notice").hide(300);

 <% @list.errors.full_messages.each do |msg| -%>
 $("#list_errors").html("<%= escape_javascript(msg)%>");     
  <% end -%>

  $("#new_list").remove();
  /*Update the html of the div post_errors with the new one*/

  /*Show the div post_errors*/
  $("#list_errors").show(300);
    $("#form-list").remove();

<% else -%>
  /*Hide the div post_errors*/
  $("#list_errors").hide(300);

  /*Update the html of the div flash_notice with the new one*/

  $("#flash").html("<%= escape_javascript(render('shared/flash'))%>");

   $("#flash").hide(2000);

  /*Clear the entire form*/
  $(":input:not(input[type=submit])").val("");

  /* append na lista do id certo*/



  $("#form-list").html("<div class=''><div style='height:200px'><div id='<%= escape_javascript(@list.id.to_s)%>-List' class='well'><a class='glyphicon glyphicon-remove navbar-right link' data-confirm='Você tem certeza?' data-method='delete' href='/lists/<%= escape_javascript(@list.id.to_s)%>' rel='nofollow'></a><form accept-charset='UTF-8' action='/lists/<%= escape_javascript(@list.id.to_s)%>' class='edit_list' data-remote='true' id='edit_list_<%= escape_javascript(@list.id.to_s)%>' method='post'><div style='margin:0;padding:0;display:inline'><input name='utf8' type='hidden' value='✓'><input name='_method' type='hidden' value='patch'></div><h3><div class='title-list' id='lista-<%= escape_javascript(@list.id.to_s)%>' lista='<%= escape_javascript(@list.id.to_s)%>'><%= escape_javascript(@list.title)%></div></h3></form><div id='vazio' ></div></div><a class='btn btn-primary btn-lg btn-block' data-remote='true' href='/tasks/new?list=<%= escape_javascript(@list.id.to_s)%>' style='margin-top: 0px;'>Nova Tarefa</a></div></div>");
  //remover id do form-list
  $("#form-list").attr("id","");

  $("#new_list").remove();
  

<% end -%>
