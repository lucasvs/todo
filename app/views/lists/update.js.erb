<% if @list.errors.any? -%>
  /*Hide the flash notice div*/
  $("#flash_notice").hide(300);

 <% @list.errors.full_messages.each do |msg| -%>
 $("#checklist_errors").html("<%= escape_javascript(msg)%>");     
  <% end -%>

$("#lista-<%= escape_javascript(@list.id.to_s)%>").html('Título não pode ser vazio');
<% else -%>

  /*Update the html of the div flash_notice with the new one*/ 
  $("#flash").html("<%= escape_javascript(render('shared/flash'))%>");

  $("#flash").hide(2000);
  
   

$("#lista-<%= escape_javascript(@list.id.to_s)%>").html('<%= escape_javascript(@list.title)%>');

 
 

<% end -%>
