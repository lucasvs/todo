$("#new-list").before("<%= escape_javascript(render "new", :formats => [:html]) %>");
//$("#main").before("<%= escape_javascript(render "new", :formats => [:html]) %>");
$('#list_title').focus();

$('#list_title').on('blur', function () {    
     $('#new_list').submit();

  });

$('#list_title').on('keydown', function (ev) {
       if(ev.which === 13) {
        // Will change backgroundColor to blue as example       
        $('#new_list').submit();
       
        // Avoid form submit
        return false;
    }
  });


